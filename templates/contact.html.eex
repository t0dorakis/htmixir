<!DOCTYPE html>
<html>
  <head>
    <script src="/assets/htmx.min.js"></script>
  </head>
  <body>
    <div hx-target="this" hx-swap="innerHTML">
      <div class="form-group">
        <label>First Name</label>: <%= @contact.first_name %>
      </div>
      <div class="form-group">
        <label>Last Name</label>: <%= @contact.last_name %>
      </div>
      <div class="form-group"><label>Email</label>: <%= @contact.email %></div>
      <button hx-get="/contact/1/edit" class="btn btn-primary">
        Click To Edit
      </button>
    </div>
  </body>
</html>
